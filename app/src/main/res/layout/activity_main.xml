        <!--Control Bars-->
        <ProgressBar
            android:id="@+id/fanProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:scaleY="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:rotation="-90"
            app:layout_constraintBottom_toTopOf="@+id/divider50"
            app:layout_constraintEnd_toStartOf="@+id/vdivider5"
            app:layout_constraintStart_toEndOf="@+id/vdivider4"
            app:layout_constraintTop_toBottomOf="@+id/divider30" />

        <ProgressBar
            android:id="@+id/tempProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:scaleY="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:rotation="-90"
            app:layout_constraintBottom_toTopOf="@+id/divider50"
            app:layout_constraintEnd_toStartOf="@+id/vdivider6"
            app:layout_constraintStart_toEndOf="@+id/vdivider5"
            app:layout_constraintTop_toBottomOf="@+id/divider30" />

